# Backend Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (used by cloud deployment)
PORT=8080

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL - supports SQLite (development) and PostgreSQL (production)
# SQLite (default for development):
DATABASE_URL=sqlite:///./insomnia_transcripts.db

# PostgreSQL (for production):
# DATABASE_URL=postgresql://username:password@localhost:5432/insomnia_db

# =============================================================================
# AI PROCESSING APIS
# =============================================================================

# Gemini API for AI processing
GEMINI_API_KEY=your-gemini-api-key-here

# AssemblyAI for transcription
ASSEMBLYAI_API_KEY=your-assemblyai-api-key-here

# =============================================================================
# CLOUD STORAGE (OPTIONAL)
# =============================================================================

# Enable cloud storage for production
CLOUD_STORAGE_ENABLED=false

# Google Cloud Storage configuration
GCS_BUCKET_NAME=your-bucket-name
GCP_PROJECT_ID=your-project-id

# Google Cloud credentials (path to service account JSON)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Python environment
PYTHONUNBUFFERED=1
MOVIEPY_PROGRESS_BAR=0
